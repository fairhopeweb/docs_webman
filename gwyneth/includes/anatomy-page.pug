	area( href="#"+topic_href+"-3" coords="829,66,1048,143"  title="3. Page excerpt" )
	area( href="#"+topic_href+"-4" coords="10,267,521,369"   title="4. Intro Widgets" )
	area( href="#"+topic_href+"-5" coords="9,376,522,516"    title="5. Page content & sidebar" )
	area( href="#"+topic_href+"-5" coords="857,165,1020,426" title="5. Page content & sidebar" )
